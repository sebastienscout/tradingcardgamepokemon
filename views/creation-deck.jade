extends layout
block append stylesheets
    link(rel='stylesheet', href='/stylesheets/creation-deck.css')
block content

    script(src='/js/creation-deck.js')

    form(method="post")

    div#entete
        h1 Création / Modification du Deck
        button(id="reload") Remettre à 0
        button(id="envoiDeck" disabled="disabled") Enregistrer
    div#menu
        ul
            li.menu1.selected Pokémons
            li.menu2 Energies
            //li.menu3 Champions

    div.cartes
        div#pokemons
            each card in cards
                div(class="cardContent hvr-grow", expansion='#{card.expansion.name}')
                    img(src="images/cards/pokemon/XY/"+card.expansion.name+"/" + card.card_number + ".png")
                    div.rond
                    input(type="number", id= card.card_number, step="1" readonly)



        div#energies
            each energy in energies
                div(class="cardContent hvr-grow", expansion='#{energy.expansion.name}')
                    img(src="images/cards/" + energy.expansion.name + "/" + energy.card_number + ".png")
                    div.rond
                    input(type="number", id= i, step="1" readonly)

    div#donnees

