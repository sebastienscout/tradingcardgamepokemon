extends layout
block title
    title JCC pokémon
block append stylesheets
    link(rel='stylesheet', href='/stylesheets/inscriptionConnexion.css')
block content
    img(src="/images/pokemon_logo.png")
    audio(preload="auto" id="sonMenu", src="/sound/menu.mp3", type="audio/mp3")

    a(href='' style='display:block;text-align:center;') #{username}
    //Menu
    div(id="formConnect" class="menu")
        h2 Menu Pokémon JCC
        button(id='createDeck') Créer un nouveau Deck
        button(id='editDeck') Modifier le Deck
        button(id='playGame') Lancer une partie
        button(id='logOut') Deconnexion

    //Liste du Deck actuel
    div(id="listDeck")
        //Intérrogation de la BDD pour le Deck

    script(src="/js/menu.js")
    script(src="/routes/menu.js")
    script(src="/js/creation-deck.js")
