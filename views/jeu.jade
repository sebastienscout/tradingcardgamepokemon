extends layout
block title
    title Jeu
block append stylesheets
    link(rel='stylesheet', href='/stylesheets/maingame.css')
block content
    div#board
        div#board-opponent
            div.cards
                div.cards-hand
                    ul
                div.cards-bench
                    ul
                div.cards-active
                    img(src="", class="interaction hvr-grow card-active" id="opponent-active")
                    div.life-points
            div.numbered-cards
                div.deck
                    p Deck
                    img(src="images/board/back.png")
                    div.number-cards 60
                div.rewards
                    p Cartes récompenses
                    img(src="images/board/back.png")
                    div.number-cards 6
        div#board-player
            div.cards
                div.cards-active
                    img(src="", class="interaction hvr-grow card-active" id="player-active")
                    div.life-points
                    div.energies-icones
                div.cards-bench
                    ul
                div.cards-hand
                    ul
            div.numbered-cards
                div.rewards
                    p Cartes récompenses
                    img(src="images/board/back.png")
                    div.number-cards 6
                div.deck
                    p Deck
                    img(src="images/board/back.png")
                    div.number-cards 60

        div#zoomed-card
            img(src="#", class="interaction")
            ul#menu-card
        input(type="button", id="endTurn" value="Fin de tour").
    script(src="http://localhost:3000/socket.io/socket.io.js")
    script(src="js/jeu.js")